.userbar
  display flex
  justify-content flex-end
  background #fff
  border 1px solid #d7d8db
  margin 20px
  padding 20px

  &__finder
    border 1px solid #dcdbdb
    width 85%
    height 40px
    padding-left 10px
    color #777777
    font-size 12px
    font-weight 400
    margin 0px 5px 0px 0px
    background #f5f5f5
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px

    &:focus 
      color #0079c2
      border 1px solid #0079c2

  &__dateInput


  &__date
    border 1px solid #dcdbdb
    width 15%
    height 40px
    padding-left 10px
    color #777777
    font-size 12px
    margin 0px 0px 0px 5px
    font-weight 400
    background #f5f5f5
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px

    &:focus 
      color #0079c2
      border 1px solid #0079c2

  &__period
    border 1px solid #dcdbdb
    width 15%
    height 40px
    padding-left 10px
    color #777777
    font-size 12px
    margin 0px 0px 0px 5px
    font-weight 400
    background #f5f5f5
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px

    &:focus 
      color #0079c2
      border 1px solid #0079c2

  &__info
    width 200px
    padding 6px 10px 6px 10px
    margin 0px
    
    h3
      color #000
      font-size 12px
      margin 0px 0px 3px 0px

    h4
      color #777777
      font-size 10px
      margin 3px 0px 0px 0px

  &__logout
    color #fff
    border 0px solid #fff
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px
    margin 0px
    font-family 'roboto'
    font-weight 400
    font-size 12px
    padding 0px 30px
    background #0079c2
  
    &:hover
      background #0164ac