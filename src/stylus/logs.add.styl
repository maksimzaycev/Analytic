.logs
  padding 0px

  &__form
    padding 0px
    width 100%
    margin-bottom 0px

  &__main
    display flex
    justify-content space-between
    align-items flex-end
    flex-grow 1
    padding 10px 0px

  &__pages
    width 100%

  &__page
    display flex
    justify-content space-between
    align-items flex-end
    flex-grow 1
    padding 10px 0px

  &__node
    border 0px solid red

    &--date
      width 32.3%
    
    &--time
      width 32.3%

    &--name
      width 32.3%

    &--title
      width 31%

    &--link
      width 31%

    &--long
      width 31%

    &--delete
      width 38px

  &__label
    font-size 12px

  &__input
    border 1px solid #dcdbdb
    width 100%
    height 40px
    padding-left 10px
    color #777777
    font-size 12px
    font-weight 400
    margin 5px 10px 0px 0px
    background #fff
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px

  &__delete
    text-align center
    display block
    color #fff
    border 1px solid #0079c2
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px
    font-family 'roboto'
    font-weight 400
    font-size 12px
    padding 12px
    background #0079c2

    &:hover
      background transparent
      border 1px solid #0079c2
      color #0079c2

  &__buttons
    width 100%
    padding 10px 0px 0px 0px
    text-align right

  &__button
    color #fff
    border 1px solid #fff
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px
    height 40px
    margin 0px 0px 0px 10px
    font-family 'roboto'
    font-weight 400
    font-size 12px
    padding 0px 30px
    background #0079c2
  
    &:hover
      background transparent
      border 1px solid #0079c2
      color #0079c2

.normal-input
  color #777
  border 1px solid #dcdbdb

.normal-label
  color #000

.active-input
  color #0079c2
  border 1px solid #0079c2

.active-label
  color #0079c2

.error-input
  color #c62828
  border 1px solid #c62828

.error-label
  color #c62828

.adder input[type="text"]::-webkit-input-placeholder {text-indent: 0px; transition: text-indent 0.5s ease; color: #757575;}
.adder input[type="text"]::-moz-placeholder {text-indent: 0px; transition: text-indent 0.5s ease; color: #757575;}
.adder input[type="text"]:-moz-placeholder {text-indent: 0px; transition: text-indent 0.5s ease; color: #757575;}
.adder input[type="text"]:-ms-input-placeholder {text-indent: 0px; transition: text-indent 0.5s ease; color: #757575;}
.adder input[type="text"]:focus::-webkit-input-placeholder {text-indent: 500px; transition: text-indent 0.5s ease; color: #757575;}
.adder input[type="text"]:focus::-moz-placeholder {text-indent: 500px; transition: text-indent 0.5s ease; color: #757575;}
.adder input[type="text"]:focus:-moz-placeholder {text-indent: 500px; transition: text-indent 0.5s ease; color: #757575;}
.adder input[type="text"]:focus:-ms-input-placeholder {text-indent: 500px; transition: text-indent 0.5s ease; color: #757575;}