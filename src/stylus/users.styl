.users
  padding 0px

  &__title
    font-weight 300
    font-size 20px
    color #000
    margin-top 20px
    margin-bottom 30px

  &__table
    border-collapse 0px
    border-spacing 0px
    font-size 15px
    width 100%

  &__head-row
    display flex
    font-weight 500
    border-bottom 1px solid #dde2e6

  &__cell
    padding 12px
    text-align center
    border-bottom 1px solid #dde2e6

    &--head
      padding 12px

    &--body
      padding-left 12px

    &--action
      width 4%

    &--name
      width 20%

    &--company
      width 20%

    &--unit
      width 18%

    &--finishDate
      width 13%

    &--days
      width 7%

    &--actions
      width 5%
      text-align right

    &--null
      width 5%

  &__row

    &--head
      font-weight 400

    &--body
      font-weight 300

    &--null
      font-weight 300
      border-bottom 1px solid #dde2e6

  &__edit
    text-align center
    font-size 15px
    font-weight 300
    width 100%
    margin 0px
    padding 0px
    color #0079c2
    border 0px solid #fff
    background transparent
    -webkit-appearance none
    -moz-appearance none
    appearance none

  &__actionIcon
    margin-left 7px

    &--pushed
      color #c0d8e6
      cursor pointer
    
    &--unpushed
      color #0079c2
      cursor pointer
  
  &__addbar
    background #fff
    margin 20px
    padding 20px
    border 1px solid #d7d8db

  &__data
    background #fff
    margin 20px
    padding 20px
    border 1px solid #d7d8db

.power1
  color #000

.power2
  color #5a0000

.power3
  color #820101

.power4
  color #bb0101

.power5
  color #f00

@media screen and (max-width: 1440px)
  .users
    &__table
      font-size 13px
    
    &__edit
      font-size 13px

    &__node
      width 21% !important
      