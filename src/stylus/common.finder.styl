.filter
  padding 0px 20px
  background #f2f2f2  

  &__finder
    border 1px solid #dcdbdb
    width 100%
    height 40px
    padding-left 10px
    color #777777
    font-size 12px
    font-weight 400
    margin: 26px 0px 26px 0px
    background #fff
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px

    &:focus 
      color #0079c2
      border 1px solid #0079c2


  &__date
    border 1px solid #dcdbdb
    width 8%
    height 40px
    padding-left 10px
    color #777777
    font-size 12px
    font-weight 400
    margin 26px 8px 26px 8px
    background #fff
    -webkit-appearance none
    border-radius 0px
    -moz-border-radius 0px
    -webkit-border-radius 0px

    &:focus
      color #0079c2
      border 1px solid #0079c2

.findInput::-webkit-input-placeholder       {text-indent: 0px;   transition: text-indent 0.5s ease; color: #757575;}
.findInput::-moz-placeholder                {text-indent: 0px;   transition: text-indent 0.5s ease; color: #757575;}
.findInput:-moz-placeholder                 {text-indent: 0px;   transition: text-indent 0.5s ease; color: #757575;}
.findInput:-ms-input-placeholder            {text-indent: 0px;   transition: text-indent 0.5s ease; color: #757575;}
.findInput:focus::-webkit-input-placeholder {text-indent: 2500px; transition: text-indent 0.5s ease; color: #757575;}
.findInput:focus::-moz-placeholder          {text-indent: 2500px; transition: text-indent 0.5s ease; color: #757575;}
.findInput:focus:-moz-placeholder           {text-indent: 2500px; transition: text-indent 0.5s ease; color: #757575;}
.findInput:focus:-ms-input-placeholder      {text-indent: 2500px; transition: text-indent 0.5s ease; color: #757575;}